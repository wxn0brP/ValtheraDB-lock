{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2024",
        "moduleResolution": "bundler",
        "paths": {},
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "types": [
            "@wxn0brp/db-storage-dir",
            "@types/bun",
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
